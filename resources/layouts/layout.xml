           x="3%"
           y="top"
           font="@Fonts.unica_56"
           justification="Graphics.TEXT_JUSTIFY_LEFT"
           color="Graphics.COLOR_YELLOW" />
    <label id="TimeDisplay"
           x="2%"
           y="10%"
           font="@Fonts.limelight_100"
           justification="Graphics.TEXT_JUSTIFY_LEFT"
           color="#9ef547" />
    <label id="BatteryDisplay"
           x="83%"
           y="5.5%"
